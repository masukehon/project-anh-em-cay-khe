<% include('../functionCheck') %>

<%if(messages.length !== 0){ %>
    <div class="container"><a class="alert-success" style="padding:15px 250px;font-size:18px">Notify: <%=messages%></a></div>
<% } %>

<div class="container">
    <h3><a href="/admin/dynamic/<%=dynamicForm%>/insert" style="text-decoration: underline">Insert <%=dynamicForm%></a></h3>  
</div>
<hr>
<table id="datatable" class="table table-striped table-bordered">
    <thead>
        <tr>
               <th 
                    <% if(!checkHide(dynamicForm,"title")){ %>
                        hidden
                    <%}%>
                >Title</th>
               <th 
                    <% if(!checkHide(dynamicForm,"content")){ %>
                        hidden
                    <%}%>
               >Content</th>
               <th
                    <% if(!checkHide(dynamicForm,"unit")){ %>
                        hidden
                    <%}%>
               >Unit</th>
               <th
                    <% if(!checkHide(dynamicForm,"imagePri")){ %>
                        hidden
                    <%}%>
               >Image Primary</th>
               <th
                    <% if(!checkHide(dynamicForm,"imageSub")){ %>
                        hidden
                    <%}%>
               >Image Sub</th>
               <th
                    <% if(!checkHide(dynamicForm,"highlight")){ %>
                        hidden
                    <%}%>
               >Highlight </th>
               <th>Edit</th>
               <th>Delete</th>
           </tr>
       </thead>
       <tbody>
            <% dyna.forEach(f=>{ 
                const { _id, imagePrimary, imageSub, title, content, isHighLight, unit, category } = f
            %> 
            
            <tr>
               <td
                    <% if(!checkHide(dynamicForm,"title")){ %>
                    hidden
                    <%}%>
               ><%= title%></td>
               <td
                    <% if(!checkHide(dynamicForm,"content")){ %>
                        hidden
                    <%}%>
               ><%= content%></td>
               <td
                    <% if(!checkHide(dynamicForm,"unit")){ %>
                        hidden
                    <%}%>
               ><%= unit%></td>
               <td
                    <% if(!checkHide(dynamicForm,"imagePri")){ %>
                        hidden
                    <%}%>
               >
                   <img src="images/admin/<%= imagePrimary%>" width="50px" alt="">
               </td>
               <td
                    <% if(!checkHide(dynamicForm,"imageSub")){ %>
                        hidden
                    <%}%>
               >
                    <img src="admin/image/<%= imageSub%>" width="50px" alt="">
               </td>
               <td
                    <% if(!checkHide(dynamicForm,"highlight")){ %>
                        hidden
                    <%}%>
               >
                        <%if(isHighLight){ %>
                            <input type="checkbox" checked disabled>
                        <% }else{ %>
                            <input type="checkbox" disabled>
                        <% } %>
               </td>
               <td class="center"><i class="fa fa-pencil fa-fw"></i> <a href="/admin/dynamic/<%=dynamicForm%>/frUpdate/<%=_id%>">Sữa</a></td>
               <td class="center"><i class="fa fa-trash-o fa-fw"></i><a href="/admin/dynamic/remove/<%=_id%>"> Xóa</a></td>
            </tr>
            <% })%>
        </tbody>
</table>