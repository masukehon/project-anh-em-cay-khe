<%if(messages.length !== 0){ %>
  <div style="margin: 0 0;width:100%;text-align:center;">
    <p class="alert-success" style="padding:15px 250px;font-size:18px">Notify: <%=messages%></p>
</div>
<% } %>
<br>
<form action="admin/infor/update" enctype="multipart/form-data" method="POST">
    <div class="form-group">
      <label>Email address</label>
      <input type="email" class="form-control" name="email"  placeholder="name@example.com" value="<%=infor.email%>">
    </div>
    <div class="form-group">
      <label>Hotline</label>
      <input type="text" class="form-control" name="hotline" placeholder="hotline" value="<%=infor.hotline%>">
    </div>
    <div class="form-group">
      <label>Link Facebook</label>
      <input type="text" class="form-control" name="facebook" placeholder="htpp://facebook.com/technoviet" value="<%=infor.facebook%>">
    </div>
    <div class="form-group">
      <label>Link Instagarm</label>
      <input type="text" class="form-control" name="instagram" placeholder="htpp://instagram.com/technoviet" value="<%=infor.instagram%>">
    </div>
    <div class="form-group">
      <label>Address</label>
      <input type="text" class="form-control" name="address" placeholder="address" value="<%=infor.address%>">
      <br>
    </div>
    <div class="form-group">
      <label>Banner</label>
      <br>
      <img src="https://s3-ap-southeast-1.amazonaws.com/purtier/<%=infor.banner%>" alt="" width="100px">
      <br>
      <br>
      <input type="file" name="banner" class="form-control-file">
      <br>
    </div>
    <div class="form-group">
      <br>
      <label>Center image</label>
      <br>
      <img src="https://s3-ap-southeast-1.amazonaws.com/purtier/<%=infor.centerImage%>" alt="" width="100px">
      <br>
      <br>
      <input type="file" name="centerImage" class="form-control-file">
      </div>
    <br>
    <button type="submit" class="btn btn-primary mb-2">Update</button>
  </form>