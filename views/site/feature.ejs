<section class="hg_section bg-white" id="dacdiem">
    <div class="container">
        <h1 style="text-align:center; color:rgba(255,0,0,0.65);margin-top:100px;font-weight:400;font-family: 'Itim', cursive;
    font-family: 'Arima Madurai', cursive; font-size:30px;">
            Đặc điểm vượt trội của 𝔭𝔲𝔱𝔦𝔢𝔯 5𝔱𝔥</h1>
        <hr style=" width:400px; margin:auto; border:1px solid rgba(255,0,0,0.65); text-align:center">
        <!-- đặc điểm vượt trội -->
        <div class="row">
            <% data.feature.forEach( feat => { %>
            <div class="col-sm-12 col-md-6 col-lg-3">
                <!--/ Image Box style 4 - left symbol style -->
                <div class="box image-boxes imgboxes_style4 kl-title_style_left">
                    <!-- Image Box anchor link -->
                    <a class="imgboxes4_link imgboxes-wrapper" href="" target="_blank">
                        <!-- Image -->
                        <img src="https://s3-ap-southeast-1.amazonaws.com/purtier/<%= feat.imagePrimary%>" class="img-fluid imgbox_image cover-fit-img"
                            alt="RESCUE SUPPORT" title="RESCUE SUPPORT" />
                        <!--/ Image -->

                        <span class="imgboxes-border-helper"></span>
                        <h4 style="color:rgba(255,0,0,0.65); text-align:center; margin-top:20px; font-size:18px;">
                            <%= feat.title%>
                        </h4>
                    </a>
                    <!--/ Image Box anchor link -->

                    <!-- Description -->

                    <hr style="padding-top:30px;">
                    <p style="font-family: 'Comfortaa', cursive; font-size:1rem;">
                            <%= feat.content%>
                    </p>
                    <!--/ Description -->
                </div>
                <!--/ Image Box style 4 - left symbol style -->
            </div>
            <% }) %>
        </div>
        <!--/ col-sm-12 col-md-6 col-lg-4 -->
    </div>
    <!--/ row -->
</section>